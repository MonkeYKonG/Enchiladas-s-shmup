<window>
	<screen>
		<videoMode>
			<width>1680</width>
			<height>1050</height>
			<bitsPerPixel>32</bitsPerPixel>
		</videoMode>
		<title>Ma fenetre</title>
	</screen>
	<scenes>
		<scene class="MainMenu">
      <cursor>
        <texture>cursor.png</texture>
        <animations>
          <animation key="default">
            <framerateMax>20</framerateMax>
            <loop>false</loop>
            <rects>
              <rect x="0" y="0" tileX="100" tileY="100"></rect>
              <rect x="100" y="0" tileX="100" tileY="100"></rect>
              <rect x="200" y="0" tileX="100" tileY="100"></rect>
            </rects>
          </animation>
          <animation key="left_click">
            <rects>
              <rect x="0" y="100" tileX="100" tileY="100"></rect>
            </rects>
          </animation>
          <animation key="right_click">
            <rects>
              <rect x="0" y="200" tileX="100" tileY="100"></rect>
            </rects>
          </animation>
        </animations>
      </cursor>
      <background x="840" y="525">menu_background.jpg</background>
			<panel x="840" y="525">
				<title>
					<text>Salut les gens</text>
					<font>Default</font>
					<color red="12" green="178" blue="16"></color>
				</title>
				<background>panel_background.png</background>
				<border width="544" height="704" tileX="32" tileY="32">
					<texture>panel_border.png</texture>
					<corner x="0" y="0"></corner>
					<outline x="64" y="0"></outline>
				</border>
        <buttons>
          <button class="sprite">
            <texture>button.png</texture>
            <animations>
              <animation key="default">
                <framerateMax>0</framerateMax>
                <loop>false</loop>
                <rects>
                  <rect x="0" y="0" tileX="201" tileY="72"></rect>
                </rects>
              </animation>
              <animation key="on_mouse_over">
                <framerateMax>0</framerateMax>
                <loop>false</loop>
                <rects>
                  <rect x="0" y="72" tileX="201" tileY="72"></rect>
                </rects>
              </animation>
              <animation key="on_click">
                <framerateMax>0</framerateMax>
                <loop>false</loop>
                <rects>
                  <rect x="0" y="144" tileX="201" tileY="72"></rect>
                </rects>
              </animation>
            </animations>
          </button>
          <button class="text">
            <text>bouton de test</text>
            <font>Default</font>
          </button>
        </buttons>
			</panel>
			<panel x="10" y="10">
				<title>
					<text>Je suis un panel!</text>
					<font>Default</font>
				</title>
			</panel>
		</scene>
	</scenes>
</window>