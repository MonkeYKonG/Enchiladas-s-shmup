<scene class="Schmup">
  <% cursor.xml %>
  <background x="%($(window.width)$ / 2)%" y="%($(window.height)$ / 2)%">
    <texture>schmup_background.jpg</texture>
  </background>
    <player x="%($(window.width)$ / 2)%" y="%(3 * $(window.height)$ / 4)%">
      <texture>player.png</texture>
      <inputsDeplacement>
        <input input="Up" direction="UP"></input>
        <input input="Down" direction="DOWN"></input>
        <input input="Left" direction="LEFT"></input>
        <input input="Right" direction="RIGHT"></input>
      </inputsDeplacement>
      <inputsShoot>
        <input input="Space" key="default"></input>
      </inputsShoot>
      <deplacements speed="12">
      </deplacements>
      <animations>
        <animation key="default">
          <rects>
            <rect x="129" y="175" tileX="80" tileY="98"></rect>
          </rects>
        </animation>
      </animations>
      <shoots framerateMax="10">
        <shoot key="default">
          <bullet travelTime="150" damage="1">
            <texture>bullet.png</texture>
            <deplacements speed="18">
              <direction x="0" y="-1"></direction>
            </deplacements>
            <animations>
              <animation key="default">
                <framerateMax>7</framerateMax>
                <loop>true</loop>
                <rects>
                  <rect x="0" y="0" tileX="32" tileY="32"></rect>
                  <rect x="32" y="0" tileX="32" tileY="32"></rect>
                  <rect x="64" y="0" tileX="32" tileY="32"></rect>
                  <rect x="96" y="0" tileX="32" tileY="32"></rect>
                </rects>
              </animation>
            </animations>
          </bullet>
        </shoot>
      </shoots>
    </player>
    <enemies>
      <testEnemy>
        <texture>player.png</texture>
        <deplacements speed="1">
          <direction x="-1" y="0"></direction>
        </deplacements>
        <animations>
          <animation key="default">
            <framerateMax>5</framerateMax>
            <loop>true</loop>
            <rects>
              <rect x="129" y="175" tileX="80" tileY="98"></rect>
            </rects>
          </animation>
          <animation key="death">
            <framerateMax>20</framerateMax>
            <rects>
              <rect x="0" y="0" tileX="80" tileY="98"></rect>
              <rect x="0" y="100" tileX="80" tileY="98"></rect>
              <rect x="100" y="0" tileX="80" tileY="98"></rect>
            </rects>
          </animation>
        </animations>
      </testEnemy>
    </enemies>
    <stages>
      <stage1>
        <wave needClean="true" timeToBegin="60">
          <testEnemy x="300" y="300"></testEnemy>
          <testEnemy x="600" y="300"></testEnemy>
          <testEnemy x="300" y="600"></testEnemy>
        </wave>
        <wave needClean="false" timeToBegin="60">
          <testEnemy x="300" y="300"></testEnemy>
          <testEnemy x="600" y="300"></testEnemy>
          <testEnemy x="300" y="600"></testEnemy>
        </wave>
      </stage1>
    </stages>
</scene>